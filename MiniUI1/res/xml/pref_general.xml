<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <EditTextPreference android:key="server_url"
        android:title="@string/pref_server_url"
        android:defaultValue="@string/pref_default_server_url"
        android:summary="@string/pref_server_url"/>

    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
        android:defaultValue=""
        android:inputType="text"
        android:key="server_username"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_server_username"/>

    <EditTextPreference
        android:defaultValue=""
        android:inputType="text"
        android:key="server_password"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_server_password"/>

</PreferenceScreen>
