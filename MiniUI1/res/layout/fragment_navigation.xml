<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.miniui1.Home$PlaceholderFragment" >
	
	<TextView
	    android:id="@+id/textView_ping"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentTop="true"
	    android:layout_centerHorizontal="true"
	    android:layout_marginTop="29dp"
	    android:text="@string/activity_title" />
    
    <Button
	    android:id="@+id/button_checkvideo"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignRight="@+id/button_newproject"
	    android:layout_below="@+id/textView_ping"
	    android:text="@string/check_video" />	
    
    <Button
        android:id="@+id/button_newproject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_checkvideo"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/new_project" />

 	<Button
 	    android:id="@+id/button_manageprojects"
 	    android:layout_width="wrap_content"
 	    android:layout_height="wrap_content"
 	    android:layout_below="@+id/button_newproject"
 	    android:layout_centerHorizontal="true"
 	    android:layout_centerVertical="true"
 	    android:text="@string/manage_projects" />
 	
 	<Button
 	    android:id="@+id/button_startlastproject"
 	    android:layout_width="wrap_content"
 	    android:layout_height="wrap_content"
 	    android:layout_below="@+id/button_manageprojects"
 	    android:layout_centerHorizontal="true"
 	    android:layout_centerVertical="true"
 	    android:text="@string/start_last_project" />

	<Button
	    android:id="@+id/button_debug"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/button_startlastproject"
	    android:layout_centerHorizontal="true"
	    android:text="Debug" />

											

	
    
</RelativeLayout>