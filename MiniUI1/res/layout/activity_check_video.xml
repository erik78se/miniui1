<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.miniui1.CheckVideoActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/editTextLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:text="Location1" />

        <Spinner
            android:id="@+id/spinnerLocations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextureView
            android:id="@+id/textureview_video"
            android:layout_width="208dp"
            android:layout_height="124dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Pipe Material" />

            <Spinner
                android:id="@+id/spinnerPipeMaterial"
                android:layout_width="76dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Spinner
                android:id="@+id/spinnerPipeDimension"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/pipedimensions"
                android:layout_weight="1" />

        </LinearLayout>

    </LinearLayout>

    <RadioGroup
        android:id="@+id/radioGroupGrade"
        android:layout_width="286dp"
        android:layout_height="52dp"
        android:contentDescription="Grade"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grade" />

        <RadioButton
            android:id="@+id/radio0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="1" />

        <RadioButton
            android:id="@+id/radio1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2" />

        <RadioButton
            android:id="@+id/radio2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3" />
      <RadioButton
            android:id="@+id/radio3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4" />
      <RadioButton
            android:id="@+id/radio4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Note" />

    <EditText
        android:id="@+id/editText_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <CheckBox
            android:id="@+id/checkBoxDaywater"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daywater" />

        <CheckBox
            android:id="@+id/checkBoxSpillWater"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spillwater" />

        <CheckBox
            android:id="@+id/checkBoxPrevInspected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inspected" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <CheckBox
            android:id="@+id/checkBoxUpStream"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Up stream" />

        <CheckBox
            android:id="@+id/checkBoxCleansedBefore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cleansed before" />

    </LinearLayout>

    <Button
        android:id="@+id/button_takescreenshot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Take picture" />

</LinearLayout>